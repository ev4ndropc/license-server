<%- include('../../partials/header.ejs') %>
<link rel="stylesheet" href="https://unpkg.com/js-datepicker/dist/datepicker.min.css">
<body background="/images/bg.png">

<%- include('../../partials/navbar.ejs') %>


<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      Register new customer
    </div>
    <div class="card-body">
      <form method="POST" action="/register-new-customer">

        <div class="form-input w-100 mb-4">
          <input type="text" class="form-control" name="name" required />
          <label for="inputEmail" class="">Name</label>
        </div>

        <div class="form-input w-100 mb-4">
          <input type="text" class="form-control" name="email" required />
          <label for="inputEmail" class="">Email</label>
        </div>

        <div class="form-input w-100 mb-4">
          <input type="text" class="form-control" name="product" required />
          <label for="inputEmail" class="">Product</label>
        </div>

        <div class="form-input w-100 mb-4">
          <input type="text" class="form-control" name="domain" required />
          <label for="inputEmail" class="">Domain</label>
        </div>

        <div class="form-input w-100 mb-4">
          <input type="date" class="form-control" name="date" required />
          <label for="inputEmail" class="">Date</label>
        </div>

        <div class="d-flex justify-content-center align-itens-center">
          <button class="btn custom btn-lg mt-5 text-white">Register</button>
        </div>

      </form>
    </div>
  </div>
</div>
<%if (message != '' && message.startsWith('There')) {%>
  <script>
      Swal.fire({
        icon: 'error',
        text: `<%= message %>`,
      });
  </script>
<%}%>

<%if (message != '' && message.startsWith('User')) {%>
  <script>
      Swal.fire({
        icon: 'success',
        text: `<%= message %>`,
      });
  </script>
<%}%>
<script src="https://unpkg.com/js-datepicker"></script>
</body>

<%- include('../../partials/footer.ejs') %>
